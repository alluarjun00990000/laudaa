payment xml 
"<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground">

    <!-- Header with Original Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="?attr/colorBackground"
        android:gravity="center">

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:contentDescription="Header Image"
            android:scaleType="fitXY"
            android:src="@drawable/header_image" />
    </LinearLayout>

    <!-- Form Section in the Center -->

    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- PAN Number Input -->
        <EditText
            android:id="@+id/etPanNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints=""
            android:background="@drawable/custom_edittext"
            android:hint="@string/enter_pan_number"
            android:maxLength="10"
            android:padding="12dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />

        <!-- Date of Birth Input -->
        <EditText
            android:id="@+id/etDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints=""
            android:background="@drawable/custom_edittext"
            android:hint="@string/enter_dob"
            android:inputType="date"
            android:padding="12dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />

        <!-- Mother's Name Input -->
        <EditText
            android:id="@+id/etMotherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints=""
            android:background="@drawable/custom_edittext"
            android:hint="@string/enter_mother_name"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />

        <!-- Next Payment Button -->
        <Button
            android:id="@+id/btnNextPayment"
            android:layout_width="match_parent"
